{
  "apiVersion":"v1",
  "kind":"Pod",
  "metadata":{
    "labels":{
      "app":"POD_NAME"
    },
    "name":"POD_NAME",
    "namespace":"NAMESPACE"
  },
  "spec":{
    "containers":[
      {
        "image":"POD_IMAGE",
        "imagePullPolicy":"Always",
        "name":"container-0",
        "resources":{
          "limits":{
            "cpu":"0.25",
            "memory":"1Gi"
          },
          "requests":{
            "cpu":"0.25",
            "memory":"1Gi"
          }
        },
        "terminationMessagePath":"/dev/termination-log",
        "terminationMessagePolicy":"File"
      }
    ],
    "imagePullSecrets":[
      {
        "name":"imagepull-secret"
      }
    ],
    "restartPolicy":"Always",
    "schedulerName":"default-scheduler",
    "terminationGracePeriodSeconds":30
  }
}
