{
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
        "name": "EVS_PVC_NAME",
        "namespace": "NAMESPACE"
    },
    "spec": {
        "accessModes": [
            "ReadWriteMany"
        ],
        "resources": {
            "requests": {
                "storage": "10240Gi"
            }
        },
        "storageClassName": "csi-nas"
    }
}
