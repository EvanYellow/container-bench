{
    "kind": "Deployment",
    "apiVersion": "apps/v1",
    "metadata": {
        "name": "POD_NAME",
        "namespace": "NAMESPACE"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "POD_NAME"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "POD_NAME"
                },
                "annotations": {
                    "metrics.alpha.kubernetes.io/custom-endpoints": "[{\"api\":\"\",\"path\":\"\",\"port\":\"\",\"names\":\"\"}]"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "container-0",
                        "image": "POD_IMAGE",
                        "resources": {
                            "limits": {
                                "cpu": "250m",
                                "memory": "512Mi"
                            },
                            "requests": {
                                "cpu": "250m",
                                "memory": "512Mi"
                            }
                        },
                        "terminationMessagePath": "/dev/termination-log",
                        "terminationMessagePolicy": "File",
                        "imagePullPolicy": "IfNotPresent"
                    }
                ],
                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst",
                "securityContext": {},
                "imagePullSecrets": [
                    {
                        "name": "default-secret"
                    }
                ]
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 0
            }
        },
        "revisionHistoryLimit": 10,
        "progressDeadlineSeconds": 600
    }
}
